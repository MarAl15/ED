#include <iostream>
#include <fstream>
#include "Letras.h"
#include "Diccionario.h"
#include "Conjunto_Letras.h"
#include<vector>

using namespace std;


int main(int argc, char *argv[]){
	if(argc < 4){
		cout << "\nLos parametros son" 
			<<"\n1: Fichero con diccionario"
			<< "\n2: Fichero con letras"
			<< "\n3:Fichero de salida";
		return 0 ;
	}
	
	Diccionario D;
	ifstream f(argv[1]);
	f >> D;

	Conjunto_Letras C;
	ifstream g(argv[2]);
	g >> C;

	ofstream fsalida(argv[3]);

	int VTAMANIO = 26;
	int frec[VTAMANIO] ; //{}
cout << "\n3";
	for(int i=0; i<VTAMANIO; i++){
		cout << i << endl;
	}
cout << "\n4";
	Diccionario::iterator it;


	for(it=D.begin(); it!=D.end(); ++it){
		cout << "\nEntro";
		//frec.at((*it).at((*it).size()-1)-'a')++;
		frec[(*it).at((*it).size()-1)-'a'] = frec[(*it).at((*it).size()-1)-'a'] +1;
	}
	 cout << "salgo for 2 " ;
	//for(unsigned int i = 0 ; i < frec.size() ;i++){	
	for(int i = 0 ; i < VTAMANIO; i++){
		fsalida << "\nLetra: " //hay que sacar aqui la letra
				<< "\nLa cantidad de veces que aparece en el diccionario es: " << frec[i]
				<< "\n\n";
		//if(i == frec.size()-1)
		if( i == VTAMANIO-1)
			fsalida << endl;
	}


}
